{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "types": ["node", "global"],
        "typeRoots": ["../../node_modules/@types", "./"]
    },
    "exclude": [
        "**/*.spec.ts",
        "test-setup.ts",
        "jest.config.ts",
        "**/*.test.ts",
        "**/*.stories.ts",
        "**/*.stories.js"
    ],
    "include": [
        "**/*.ts"
    ]
}
