---
import { getComponentData } from '@/utils/typedoc';

const { name } = Astro.props;

const data = getComponentData(name)?.props?.values || [];
---

<div class="rt-TableRoot rt-r-size-2 rt-variant-surface rt-Box rt-r-my-5">
    <table class="rt-TableRootTable">
        <thead class="rt-TableHeader">
            <tr class="rt-TableRow">
                <th class="rt-TableCell rt-TableColumnHeaderCell w-1/6" style="width: auto;">Prop</th>
                <th class="rt-TableCell rt-TableColumnHeaderCell w-1/6">Default</th>
                <th class="rt-TableCell rt-TableColumnHeaderCell w-2/3">Type</th>
            </tr>
        </thead>
        <tbody class="rt-TableBody">
            {
                data.map(({ name, type, description, defaultValue }) => {
                    return (
                        <tr class="rt-TableRow" style="white-space: nowrap;">
                            <th class="rt-TableCell rt-TableRowHeaderCell" data-label="Prop">
                                <code class="rt-reset rt-Code rt-r-size-2 rt-variant-soft rt-variant-soft">{name}</code>
                            </th>
                            <td class="rt-TableCell" data-label="Default">
                                <div class="rt-Flex rt-r-display-inline-flex rt-r-ai-center rt-r-gap-2">
                                    <div class="rt-Box">
                                        <code
                                            data-accent-color="gray"
                                            class="rt-reset rt-Code rt-r-size-2 rt-variant-soft"
                                        >
                                            {defaultValue ? defaultValue : 'â€”'}
                                        </code>
                                    </div>
                                </div>
                            </td>
                            <td class="rt-TableCell" data-label="Description" style="white-space: normal;">
                                <div class="rt-Flex rt-r-display-inline-flex rt-r-ai-center rt-r-gap-2">
                                    <div class="rt-Box">
                                        <code
                                            data-accent-color="gray"
                                            class="rt-reset rt-Code rt-r-size-2 rt-variant-soft"
                                        >
                                            {type}
                                        </code>
                                        <p>{description}</p>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    );
                })
            }
        </tbody>
    </table>
</div>
