---
import MainLayout from '@/layouts/MainLayout.astro';
import Header from '@/components/layouts/Header.astro';
import Announcement from '@/components/layouts/Announcement.astro';
import Contributors from '@/components/layouts/Contributors.astro';
import DemosHomePage from '@/components/layouts/DemosHomePage.astro';
---

<MainLayout title="Radix Angular">
    <div class="relative z-10 flex min-h-screen flex-col">
        <Header />
        <main class="flex-1">
            <div class="container relative">
                <section
                    class="lg:py-18 mx-auto flex max-w-[980px] flex-col items-center gap-2 py-8 md:py-12 md:pb-16 lg:pb-20"
                >
                    <Announcement title="Slider component!" href="/primitives/components/slider" />

                    <div class="pt-4">
                        <h1
                            class="font-inter text-pretty text-center text-3xl font-bold leading-tight tracking-tight md:text-6xl lg:leading-[1.1]"
                        >
                            Angular port of RadixUI
                        </h1>
                        <p class="font-inter text-muted-foreground max-w-[750px] text-center text-lg sm:text-xl">
                            Unstyled, accessible components for building high-quality design systems and&nbsp;web apps
                            in Angular.
                        </p>

                        <div class="mt-6 flex justify-center space-x-4 md:mt-8">
                            <a
                                href="/primitives/overview/introduction"
                                class="rounded-lg bg-[#FA2C04] px-6 py-2 text-sm font-bold text-white md:py-3 md:text-base"
                            >
                                Get Started
                            </a>
                            <a
                                target="_blank"
                                href="https://github.com/radix-ng/primitives"
                                class="rounded-lg bg-gray-200 px-6 py-2 text-sm font-bold text-gray-700 md:py-3 md:text-base"
                            >
                                View on GitHub
                            </a>
                        </div>
                    </div>
                </section>
                <section class="text-foreground relative mt-2 w-full overflow-hidden">
                    <DemosHomePage />
                </section>
                <h2 class="font-inter flex flex-wrap justify-center pb-8 pt-5 text-3xl font-bold">Contributors</h2>
                <Contributors />
                <div class="pt-10"></div>
            </div>
        </main>
    </div>
</MainLayout>
